<project name="KeyConstructors">

  <target name="init">
    <mkdir dir="classes"/>
  </target>

  <target name="clean">
    <delete includeEmptyDirs="true">
      <fileset dir="classes" includes="**/*"/>
    </delete>
  </target>

  <target name="build">
    <javac srcdir="src:Tests"
           classpath="javassist.jar"
           destdir="classes"
           debug="true"
           includeAntRuntime="false"/>
  </target>

  <target name="run">
    <java classpath="classes:javassist.jar"
          classname="KeyConstructors"
          fork="true"/>
  </target>

</project>
